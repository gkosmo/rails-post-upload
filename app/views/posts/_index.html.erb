<% @posts.each do |p| %>
  <div id="post-<%= p.id %>">
    <%= cl_image_tag p.photo, height: 350, width: 400, crop: :fill %>
    <%= p.message %>
    <div id="edit-post-form-<%= p.id %>">
    <%= link_to "Edit", edit_post_path(p), remote: true %>
    </div>
    <div id="delete-post-<%= p.id %>">
    <%= link_to "Delete", p, method: :delete, remote: true %>
    </div>
  </div>
<% end %>
